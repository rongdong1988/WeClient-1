<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->

    <item>
        <shape>
            <padding android:bottom="1px" />
            <solid android:color="#4ff3f3f3" />
            <corners
                android:bottomLeftRadius="13px"
                android:bottomRightRadius="13px" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#8fe7e7e7" />
            <corners
                android:bottomLeftRadius="12px"
                android:bottomRightRadius="12px" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1px"
                android:left="1px"
                android:right="1px" />
            <solid android:color="#cfd7d7d7" />
            <corners
                android:bottomLeftRadius="11px"
                android:bottomRightRadius="11px"

                />
        </shape>
    </item>
    <item>
        <shape>
            <padding android:bottom="0px" />
            <solid android:color="#ffffffff" />
            <corners
                android:bottomLeftRadius="10px"
                android:bottomRightRadius="10px" />
        </shape>
    </item>
</layer-list>