<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionbar_main_layout_main"
    android:layout_width="match_parent"
    android:layout_height="45dip"
    android:background="#1a6294">

    <RelativeLayout
        android:layout_width="180dip"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/actionbar_main_img_show_menu"
            android:layout_width="45dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:paddingBottom="10dip"
            android:paddingRight="30dip"
            android:paddingTop="10dip"
            android:src="@drawable/actionbar_left" />

        <RelativeLayout
            android:id="@+id/actionbar_main_layout_left"
            android:layout_width="130dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="28dip">

            <HorizontalScrollView
                android:id="@+id/actionbar_main_scroll_left"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:layout_width="130dip">

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="260dip"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/actionbar_main_left_layout_second"
                        android:layout_width="130dip"
                        android:layout_height="fill_parent"
                        android:paddingLeft="5dip">

                        <TextView
                            android:id="@+id/actionbar_main_left_text_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_centerVertical="true"
                            android:text="@string/mass"
                            android:textColor="#ffffff"
                            android:textSize="18dip" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/actionbar_fans_left_layout_first"
                        android:layout_width="130dip"
                        android:paddingTop="3dip"
                        android:paddingBottom="3dip"
                        android:paddingLeft="6dip"
                        android:paddingRight="6dip"
                        android:layout_height="fill_parent">

                        <TextView
                            android:id="@+id/actionbar_left_text_first"
                            android:layout_width="100dip"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:text="@string/message_all"
                            android:background="@drawable/drop_down_indecator_bg"
                            android:textColor="#ffffff"
                            android:textSize="18dip" />

                        <RelativeLayout
                            android:id="@+id/actionbar_main_layout_new_message"
                            android:layout_height="20dip"
                            android:layout_width="20dip"
                            android:background="@drawable/profile_user_indecator_bg"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="5dip"
                            android:visibility="gone"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="8dip">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:textColor="#ffffff"
                                android:id="@+id/actionbar_main_text_new_message"
                                android:textSize="10dip"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="10"

                                />
                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>


            </HorizontalScrollView>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"

        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/actionbar_main_layout_search"
            android:layout_height="fill_parent"
            android:layout_width="40dip">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_height="35dip"
                android:layout_width="35dip"
                android:paddingBottom="8dip"
                android:paddingLeft="6dip"
                android:paddingRight="6dip"
                android:paddingTop="4dip"
                android:src="@drawable/search" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="38dip"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/actionbar_main_layout_first"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginLeft="3dip">

                    <ImageView
                        android:id="@+id/actionbar_main_img_first"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="6dip"
                        android:paddingLeft="6dip"
                        android:paddingRight="6dip"
                        android:paddingTop="6dip"
                        android:src="@drawable/action_message_button_bg" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginTop="7dip"
                    android:background="#0d4a74"></LinearLayout>

                <RelativeLayout
                    android:id="@+id/actionbar_main_layout_second"
                    android:layout_width="38dip"
                    android:layout_height="38dip"
                    android:layout_marginLeft="3dip">

                    <ImageView
                        android:id="@+id/actionbar_main_img_second"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_centerHorizontal="true"
                        android:paddingBottom="9dip"
                        android:paddingLeft="9dip"
                        android:paddingRight="9dip"
                        android:paddingTop="9dip"
                        android:src="@drawable/action_mass_button_bg" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="3px"
                android:layout_marginTop="3dip"
                android:orientation="horizontal">

                <ScrollView
                    android:id="@+id/actionbar_main_scroll_index"
                    android:layout_width="fill_parent"
                    android:layout_height="3px">

                    <LinearLayout
                        android:layout_width="140dip"
                        android:layout_height="3px">

                        <LinearLayout
                            android:id="@+id/actionbar_main_layout_index"
                            android:layout_width="30dip"
                            android:layout_height="3px"
                            android:layout_marginLeft="50dip"
                            android:orientation="horizontal"
                            android:background="#ffffff">

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>