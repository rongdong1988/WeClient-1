<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="100dip"
        android:layout_width="fill_parent">

        <ImageView
            android:layout_height="80dip"
            android:layout_width="80dip"
            android:id="@+id/fans_profile_img_profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/profile_head_default" />

        <LinearLayout
            android:layout_toRightOf="@id/fans_profile_img_profile"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_height="40dip"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fans_profile_text_profile"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:textSize="18dip"
                    android:textColor="#ffffff"
                    android:text="Jing"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <ImageView
                    android:layout_height="20dip"
                    android:layout_width="20dip"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/fans_profile_text_profile"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/ic_launcher" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_height="60dip"
                android:layout_width="fill_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fans_profile_text_profile"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dip"
                    android:textSize="18dip"
                    android:textColor="#ffffff"
                    android:text="Jing"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>








</LinearLayout>