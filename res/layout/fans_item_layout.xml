<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e9e9e9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginRight="10dip">

            <ImageView
                android:id="@+id/fans_item_img_profile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/profile_head_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fans_item_text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/fans_item_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="8"
                android:maxLines="1"
                android:textColor="#a6a6a6"
                android:textSize="10dip" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <ImageButton
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="#e9e9e9"
                android:id="@+id/fans_item_button_edit_remark"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/fans_remark_edit_button_bg"
                android:scaleType="centerInside"

                />

            <LinearLayout
                android:layout_height="50dip"
                android:layout_width="2px"
                android:paddingTop="10dip"
                android:paddingBottom="10dip"
                android:layout_toLeftOf="@+id/fans_item_button_edit_remark"
                android:layout_marginRight="5dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="1px"
                    android:background="#bdbdbd"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="1px"
                    android:background="#ffffff"
                    android:orientation="horizontal">
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fans_item_layout_group"
                android:layout_toLeftOf="@+id/fans_item_button_edit_remark"
                android:orientation="horizontal"
                android:layout_marginRight="15dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/fans_item_group_button_bg"
                android:layout_width="wrap_content"
                android:layout_height="30dip" >
                <ImageView
                    android:layout_marginTop="2dip"
                    android:layout_height="26dip"
                    android:layout_width="22dip"
                    android:background="@drawable/group"
                    android:layout_marginLeft="10dip"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="5dip"
                    android:textColor="#ffffff"
                    android:textSize="13dip"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:minWidth="50dip"
                    android:id="@+id/fans_item_text_group"/>
                </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>