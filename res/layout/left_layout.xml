<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/left_layout_head"
            android:layout_height="45dip"
            android:layout_width="fill_parent"
            android:background="#3a3a3a">

            <ImageView
                android:id="@+id/left_img_profile"
                android:layout_height="35dip"
                android:layout_width="35dip"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:src="@drawable/profile_head_default" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/left_img_profile"
                android:text="Loading..."
                android:textColor="#ffffff"
                android:textSize="18dip"
                android:maxLines="1"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="8dip"
                android:layout_centerVertical="true"
                android:id="@+id/left_text_profile" />

            <ImageView
                android:id="@+id/left_button_show_list"
                android:layout_height="26dip"
                android:layout_width="26dip"
                android:layout_centerVertical="true"
                android:background="@drawable/left_user_list_button_bg"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip" />


        </RelativeLayout>

        <LinearLayout
            android:layout_height="1px"
            android:layout_width="fill_parent"
            android:background="#262626">

        </LinearLayout>

        <RelativeLayout
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

        <LinearLayout
            android:id="@+id/left_layout_profile"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/left_layout_user_list"
            android:layout_marginTop="-1000dip"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="horizontal"></LinearLayout>

            </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>